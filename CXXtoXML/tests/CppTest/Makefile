.SUFFIXES: .xml
.PHONY: test clean
.DELETE_ON_ERROR:

all: test

ROOTDIR = ../../..
CXXTOXMLDIR = $(ROOTDIR)/CXXtoXML
CXXTOXML = $(CXXTOXMLDIR)/src/CXXtoXML
CXXTOXMLFLAGS = --
CXXTESTCASES = $(wildcard *.cc)
CXXTESTOBJECTS = $(CXXTESTCASES:.cc=.xml)

$(CXXTOXML):
	$(MAKE) -C $(CXXTOXMLDIR)

%.xml: %.cc $(CXXTOXML)
	$(CXXTOXML) $< $(CXXTOXMLFLAGS) > $@

check: $(CXXTOXML) $(CXXTESTOBJECTS)

clean:
	rm -f *.xml
